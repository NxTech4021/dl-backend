# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/deuceleague

# Authentication
BETTER_AUTH_SECRET=generate_with_openssl_rand_hex_32
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_BASE_PATH=/api/auth

# OAuth - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth - Facebook
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# OAuth - Apple (if using Apple Sign-In)
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_private_key
APPLE_TEAM_ID=your_team_id
APPLE_KEY_ID=your_key_id

# Email (Gmail SMTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Payment Gateway (FIUU)
FIUU_MERCHANT_ID=your_merchant_id
FIUU_VERIFY_KEY=your_verify_key
FIUU_PRIVATE_KEY=your_private_key
FIUU_SANDBOX_URL=https://sandbox-payment.fiuu.com
FIUU_PORTAL_URL=https://sandbox-portal.fiuu.com
FIUU_PUBLIC_CALLBACK_URL=https://your-callback-url.com

# Storage
BUCKET_NAME=your_bucket_name

# Security (REQUIRED for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration (optional)
SESSION_EXPIRY_SECONDS=86400

# Google Sheets (optional)
GOOGLE_SHEETS_KEY_FILE=src/config/google-sheets-key.json

# Debug (optional)
DEBUG=prisma*
